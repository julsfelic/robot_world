<h1>Edit <%= @robot.name.capitalize %></h1>

<form action="/robots/<%= @robot.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="name">Name:</label><br>
  <input id="name" type="text" name="robot[name]" placeholder="Johnny-5" value="<%= @robot.name %>"><br>

  <label for="city">City:</label><br>
  <input id="city" type="text" name="robot[city]" placeholder="Chicago" value="<%= @robot.city %>"><br>

  <label for="state">State:</label><br>
  <input id="state" type="text" name="robot[state]" placeholder="Illinois" value="<%= @robot.state %>"><br>

  <label for="avatar">Avatar:</label><br>
  <input id="avatar" type="text" name="robot[avatar]" placeholder="Enter random text" value="<%= @robot.avatar %>"><br>

  <label for="birthday">Birthday:</label><br>
  <input id="birthday" type="date" name="robot[birthday]" value="<%= @robot.birthday %>"><br>

  <label for="date-hired">Date Hired:</label><br>
  <input id="date-hired" type="date" name="robot[date_hired]" value="<%= @robot.date_hired %>"><br>

  <label for="department">Department:</label><br>
  <input id="department" type="text" name="robot[department]" placeholder="Robotics" value="<%= @robot.department %>"><br>

  <input type="submit" value="Edit Robot">
</form>
